{
  "compilerOptions": {
      "module": "ES2020",
      "moduleResolution": "node",
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "sourceMap": false,
      "outDir": "./scripts",
      "allowJs": true,
      "rootDir": "src",
      "baseUrl": "./src",
      "paths": {
          "@lib/minecraft": ["@library/minecraft/Minecraft.js"]
      }
  },
  "include": [
      "./src",
      "src/@library/*"    
  ]
}