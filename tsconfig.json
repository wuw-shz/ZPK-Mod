{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "outDir": "./BP/scripts",
    "allowJs": true,

    "baseUrl": "./src",
    "paths": {
      "@lib/minecraft": ["@library/minecraft/Minecraft.js"],
      "@lib/math": ["@library/math/Math.js"],
      "@zpk": ["ZPK/index.js"],
      "@oj-realm": ["OJ Realm/index.js"]
    }
  },
  "include": ["./src", "src/@library/*"]
}
